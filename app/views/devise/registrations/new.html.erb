<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="flex-container">
    <div class="form-inputs" style="margin: 50px; margin-top: 0;">
    <%= f.input :name,
                required: true,
                hint: "Name(s)"%>

    <%= f.input :lastname,
                required: true,
                hint: "Lastname(s)"%>

    <%= f.input :plant,
                collection: [ "Cuautla","UK", "Spain", "India"],
                required: true %>

    <%= f.input :department,
                collection: ["Operator", "Tooling", "Engineering","Production", "Quality", "SCM", "Marketing", "Growtth", "Finance","Management"],
                required: true %>

    <%= f.input :position,
                required: true,
                hint: "Ej. Ing. de Procesos, Operador, etc"%>

    </div>

    <div class="form-inputs" style="margin: 50px; margin-top: 0;">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>

    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>

    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class:"btn btn-gradient" %>
    </div>
    <%= render "devise/shared/links" %>

    </div>
  </div>





<% end %>
